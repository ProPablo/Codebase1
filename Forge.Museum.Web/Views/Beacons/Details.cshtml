@model Forge.Museum.Interfaces.DataTransferObjects.Artefact.BeaconDto
<link href="~/Content/reset.css" rel="stylesheet" type="text/css" />
<link href="~/Content/Index.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Artefact #@Model.Id - @Model.Name</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.LabelFor(model => model.Id, "Beacon ID#:")</dt>
        <dd>@Html.DisplayFor(model => model.Id)</dd>

        <dt>@Html.LabelFor(model => model.Name, "Beacon Name:")</dt>
        <dd>@Html.DisplayFor(model => model.Name)</dd>

        <dt>@Html.LabelFor(model => model.Visits, "Visits:")</dt>
        <dd>@Html.DisplayFor(model => model.Visits)</dd>

        <dt>@Html.LabelFor(model => model.Coord_X, "X Coordinate:")</dt>
        <dd>@Html.DisplayFor(model => model.Coord_X)</dd>

        <dt>@Html.LabelFor(model => model.Coord_Y, "Y Coordinate")</dt>
        <dd>@Html.DisplayFor(model => model.Coord_Y)</dd>

        <dt>@Html.LabelFor(model => model.Description, "Description:")</dt>
        <dd>@Html.DisplayFor(model => model.Description)</dd>


        <dt>@Html.LabelFor(model => model.MAC_address, "MAC Address:")</dt>
        <dd>@Html.DisplayFor(model => model.MAC_address)</dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
